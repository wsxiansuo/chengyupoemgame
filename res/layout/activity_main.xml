<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".MainActivity" >
    <ImageView android:id="@+id/mian_title_img"
        android:src="@drawable/main_title"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
	    android:layout_marginTop="50dp"
	    />
	<Button android:id="@+id/main_start_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:background="@drawable/main_button_btn"
	    android:layout_below="@id/mian_title_img"
	    android:layout_marginTop="20dp"/>
	
	<ImageView android:id="@+id/mian_music_img"
        android:src="@drawable/shengyin_on"
	    android:layout_height="35dp"
	    android:layout_width="34dp"
		android:layout_alignParentRight="true"
		android:layout_marginRight="20dp"
		android:layout_marginBottom="30dp"
		android:layout_alignParentBottom="true"
	    />
</RelativeLayout>
