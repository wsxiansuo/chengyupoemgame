<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.sxs.chengyupoemgame.main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ceb68d"
    android:orientation="vertical" >
    <RelativeLayout android:id="@+id/rl_back_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6a4212">
        <Button android:id="@+id/back_btn" 
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/back_btn"
            android:layout_alignParentBottom="true"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关卡"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/color_white"/>
        
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
		android:gravity="center_horizontal" 
		android:id="@+id/header_layout"
		android:orientation="vertical" 
		android:layout_height="wrap_content"
		android:layout_below="@id/rl_back_view">
		<org.taptwo.android.widget.TitleFlowIndicator
			android:id="@+id/viewflowindic" android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			app:footerLineHeight="2dp"
			app:customTypeface="fonts/mygame.ttf"
			app:footerTriangleHeight="10dp" 
			app:textColor="#FFFFFFFF" 
			app:selectedColor="#000000" 
			app:footerColor="#4498b0" 
			app:titlePadding="8dp" 
			app:textSize="18sp" 
			app:selectedSize="26sp" 
			android:layout_marginTop="20dp"
			android:paddingTop="10dp" 
			app:clipPadding="5dp"></org.taptwo.android.widget.TitleFlowIndicator>
	</LinearLayout>

    	<RelativeLayout android:layout_width="match_parent"
	                android:layout_height="60dp"
	                android:background="@drawable/bottom_bg"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="20dp"
	                />    
        <org.taptwo.android.widget.ViewFlow
		android:duplicateParentState="true" 
		android:id="@+id/viewflow"
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:layout_below="@id/header_layout"
		android:layout_marginBottom="60dp">
            
        </org.taptwo.android.widget.ViewFlow>
	    <RelativeLayout android:layout_width="match_parent"
	                android:layout_height="60dp"
	                android:background="@drawable/bottom_bg"
	                android:layout_alignParentBottom="true"
	                />    
</RelativeLayout>